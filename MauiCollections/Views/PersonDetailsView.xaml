<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="MauiCollections.Views.PersonDetailsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:MauiCollections.Models"
    xmlns:viewModels="clr-namespace:MauiCollections.ViewModels"
    x:DataType="viewModels:PersonDetailsViewModel">

    <ContentPage.Content>
        <Grid ColumnDefinitions="160,*" RowDefinitions="280,*">
            <Border
                HeightRequest="120"
                Stroke="Black"
                StrokeShape="RoundRectangle 120"
                StrokeThickness="2"
                WidthRequest="120">
                <Grid>
                    
                    <Path HeightRequest="140" WidthRequest="140"  Data="M17.399999,26.300016L17.399999,30.300018 24.399997,30.300018 24.399997,26.300016z M9.200003,19.200007L20.000003,19.200007C25.099994,19.200007,29.199998,23.300015,29.199998,28.399992L29.199998,32 0,32 0,28.399992C-2.3261737E-07,23.300015,4.100005,19.200007,9.200003,19.200007z M14.599996,0C19.099994,0 22.800006,3.6999987 22.800006,8.2000008 22.800006,12.700003 19.099994,16.399986 14.599996,16.399986 10.100004,16.399986 6.4000004,12.800009 6.4000004,8.2000008 6.4000004,3.5999926 10.100004,0 14.599996,0z"  Fill="#FF000000" Width="120" Height="120"  />
                    <Image
                        HeightRequest="140"
                        Source="{Binding Photo}"
                        WidthRequest="140" />
                </Grid>
            </Border>
            <VerticalStackLayout
                Grid.Column="1"
                Margin="16,4,4,4"
                HeightRequest="200">
                <Label FontSize="Small" Text="{Binding DateOfBirth, StringFormat='Born: {0:D}'}" />
                <HorizontalStackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="Default"
                        Text="First Name" />
                    <Entry Text="{Binding FirstName}" WidthRequest="150" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="Default"
                        Text="Last Name" />
                    <Entry Text="{Binding LastName}" WidthRequest="150" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <Button
                Command="{Binding SaveChangesCommand}"
                HorizontalOptions="Center"
                Text="Save"
                VerticalOptions="End" />
        </Grid>
    </ContentPage.Content>
</ContentPage>