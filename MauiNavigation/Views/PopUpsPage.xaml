<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiNavigation.Views.PopUpsPage"
             Title="PopUpsPage">
    <StackLayout>
        <!--Display Simple Popup-->
        <Button Text="Simple Alert Dialog" Clicked="OnDisplayAlertSimple" Margin="24"/>
        <Button Text="Simple Alert Dialog with 2 buttons" Clicked="OnDisplayAlert2Buttons" Margin="24"/>
        
        <!--Display Action Sheet-->
        <Button Text="Simple Action Sheet" Clicked="OnDisplayActionSheet" Margin="24"/>
        <Button Text="More Action Sheet" Clicked="OnDisplayActionSheet2" Margin="24" />
        
        <!--Display Prompt-->        
        <Button Text="Display Prompt" Clicked="OnDisplayPrompt" Margin="24"/>
        <Button Text="Display Prompt2" Clicked="OnDisplayPrompt2" Margin="24"/>



    </StackLayout>
</ContentPage>
